<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.mudkip.lakbay.MainFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context="com.mudkip.lakbay.MainActivity">

        <ImageView
            android:id="@+id/hamburgerImageView"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/hamburger"/>

        <ImageView
            android:id="@+id/cityImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/manila"/>

        <ImageView
            android:id="@+id/textBackgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/area_menu"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="450dp"
            android:text="Location"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginStart="35dp"
            android:text="10 km"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/questMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:text="QUESTS"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/stopMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="STOPS"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/infoMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_marginStart="275dp"
            android:layout_marginTop="10dp"
            android:text="INFO"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/leftButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/rightButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/front"/>

        <ImageView
            android:id="@+id/areaSubmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textBackgroundImageView"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hamburgerImageView"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/area_submenu"
            <!--android:visibility="invisible"/>-->

        <!-- Quests --
        <TextView
            android:id="@+id/questsT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hamburgerImageView"
            android:layout_marginTop="25dp"
            android:text="QUESTS"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/completedline"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_below="@+id/questsT"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#ababab"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/completedQuestRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/completedline"
            android:layout_below="@+id/completedline"
            android:layout_marginStart="55dp"
            android:layout_marginTop="5dp"/>
        Quests end -->

        <!-- Stops --
        <TextView
            android:id="@+id/stopsT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hamburgerImageView"
            android:layout_marginTop="25dp"
            android:text="STOPS"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/completedline"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_below="@+id/stopsT"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#ababab"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/completedQuestRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/completedline"
            android:layout_below="@+id/completedline"
            android:layout_marginStart="55dp"
            android:layout_marginTop="5dp"/>
        -- Stops End -->

        <!-- INFO -->
        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hamburgerImageView"
            android:layout_marginTop="25dp"
            android:text="INFO"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/completedline"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_below="@+id/infoText"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#ababab"/>

        <TextView
            android:id="@+id/infoBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_below="@+id/completedline"
            android:layout_marginTop="5dp"
            android:text="INFO"
            android:textSize="15sp"
            />

    </RelativeLayout>
</FrameLayout>
